@using AppConsultorio.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title - Consultorio Sonrisas</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/custom-sidebar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-right sidenav" id="sidebar-wrapper">
            <div class="sidebar-heading">Nuevas Sonrisas</div>
            <div class="list-group list-group-flush">

                @foreach (MenuCLS oMenuCls in (List<MenuCLS>)Session["Rol"])
                {
                    @Html.ActionLink(oMenuCls.mensajePag, oMenuCls.nombreAccion, oMenuCls.nombreControlador, new { area = "" }, new { @class = "list-group-item list-group-item-action sidenav" })
                }


                @*@Html.ActionLink("Empleado", "Index", "Empleado", new { area = "" }, new { @class = "list-group-item list-group-item-action sidenav" })
        @Html.ActionLink("Usuario", "Index", "Usuario", new { area = "" }, new { @class = "list-group-item list-group-item-action sidenav" })
        @Html.ActionLink("Página", "Index", "Pagina", new { area = "" }, new { @class = "list-group-item list-group-item-action sidenav" })
        @Html.ActionLink("Paciente", "Index", "Paciente", new { area = "" }, new { @class = "list-group-item list-group-item-action sidenav" })*@
            </div>
            <div class="card-footer">
                <small class="text-muted">&copy James Gómez Valverde</small>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg border-bottom sidenav">
                <button class="btn btn-primary " id="menu-toggle">
                    <i class="fas fa-th-list"></i>
                    <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse word" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mt-2 mt-lg-0 sidenav">
                            <li class="nav-item active">
                                <a class="nav-link" onclick="location.href='@Url.Action("Index", "PantallaPrincipal")'" href="#Index"><i class="fas fa-home"></i> Inicio <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-circle fa-lg"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    @*<a class="dropdown-item" href="#">Configuración</a>*@
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Cerrar sesión", "CerrarSesion", "Login", new { area = "" }, new { @class = "dropdown-item" })
                                </div>
                            </li>
                        </ul>
                    </div>
            </nav>
            <!-- Texto -->
            <div class="container-fluid word-size">
                @RenderBody()
                <hr />
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <footer>
        
    </footer>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>